{
  "name": "twitturin",
  "version": "1.0.0",
  "description": "TwitturIn is a social media platform for the students of Turin Polytechnic University in Tashkent. This repository contains the source code of both the TwitturIn API and the frontend client.",
  "main": "index.js",
  "scripts": {
    "dev:api": "cd packages/api && npm run dev",
    "dev:client": "cd packages/client && npm run dev",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "test:e2e": "lerna run test:e2e --scope=@twitturin/client",
    "start:api": "lerna run start:test --scope=@twitturin/api",
    "start:client": "lerna run dev --scope=@twitturin/client"
  },
